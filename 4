#define _CRT_SECURE_NO_WARNINGS 1
/*使用if else语句编写一个程序读取输入，读到#为止。用感叹号替代句号，用两个感叹号替换原来的
感叹号，最后报告进行了多少次替换*/

#include<stdio.h>

int main()
{
	int count = 0;
	int ch = 0;
	while ((ch = getchar()) != '#')
	{
		if ('.' == ch)
		{
			putchar('!');
			count++;
			continue;
		}
		else if ('!' == ch)
		{
			putchar(ch);
			putchar(ch);
			count++;
			continue;
		 }
		else {
			 putchar(ch);
		 }
	}
	printf("\n%d\n", count);


	return 0;

}
